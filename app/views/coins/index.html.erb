<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-active">
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25" if coin.url_image%></td>
        <td><%= link_to t("links.show"), coin %></td>
        <td><%= link_to t("links.edit"), edit_coin_path(coin) %></td>
        <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

